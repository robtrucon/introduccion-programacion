public class Main {
    public static void main(String[] args) {
        //semaforo con switch y String (tipo dato texto/cadena caracteres)
        String r = "rojo";
        String a = "amarillo";
        String v = "verde";
        String color;

   switch (color = "r"){    //expresion a evaluar
       case "r":            //se ejecuta si es true en expresion evaluada al igual que los demas casos
           System.out.print("Detente");
           break;
       case "a":
           System.out.print("Precaucion - detente");
           break;
       case "v":
           System.out.print("Avanza");
           break;
       default:             //si no se cumple ningun caso se ejecuta 
           System.out.print("Semaforo apagado");
   }

    }
    }
